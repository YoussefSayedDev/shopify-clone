{
  "name": "shopify-clone",
  "version": "1.0.0",
  "description": "A Shopify clone",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc",
    "build:scss": "sass src/styles:dist/styles && postcss dist/styles/*.css --replace",
    "build": "npm run build:ts && npm run build:scss",
    "watch:scss": "sass --watch src/styles:dist/styles",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:scss": "stylelint \"src/styles/**/*.scss\"",
    "dev": "nodemon --watch src --exec \"npm run build && node dist/index.js\"",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.6",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.5.3",
    "sass": "^1.85.1",
    "stylelint": "^16.15.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-jest": "^29.2.6",
    "typescript-eslint": "^8.26.0"
  }
}
