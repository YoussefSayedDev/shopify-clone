{
  "name": "shopify-clone",
  "version": "1.0.0",
  "description": "A Shopify clone",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build:scss": "sass src/styles:dist/styles",
    "watch:scss": "sass --watch src/styles:dist/styles",
    "copy:static": "cpy \"public/**/*\" dist --parents",
    "watch:html": "chokidar \"public/**/*\" -c \"npm run copy:static\"",
    "build": "npm run clean && npm run build:ts && npm run build:scss && npm run copy:static",
    "start": "npm run build && live-server dist",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:scss\" \"npm run watch:html\" \"live-server dist\"",
    "lint": "eslint . --ext .ts",
    "lint:scss": "stylelint \"src/styles/**/*.scss\"",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "cssnano": "^7.0.6",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "sass": "^1.85.1",
    "stylelint": "^16.15.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-jest": "^29.2.6",
    "typescript-eslint": "^8.26.0"
  }
}
